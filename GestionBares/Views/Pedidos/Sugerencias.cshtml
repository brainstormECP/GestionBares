
@model IEnumerable<GestionBares.Models.DetallePedidoAlmacen>

@{
    ViewData["Title"] = "Sugerencias";
}


<div class="container-fluid">
    <h3>Sugerencias a pedir</h3>
    <hr />
    <div class="row">        
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var detalle in Model){
                        <tr>
                            <td class="col-md-6">@detalle.Producto.Nombre</td>
                            <td class="col-md-4">@detalle.Cantidad</td>
                            <td class="col-md-2 text-right">
                                <a asp-action="" asp-route-id="@detalle.Id" class="btn btn-success"><i class="fa fa-plus"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12 text-right">
            <a asp-action="Index" class="btn btn-default">Atrás</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
