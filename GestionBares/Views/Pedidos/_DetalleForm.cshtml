@model GestionBares.Models.DetallePedidoAlmacen

<div class="container-fluid">
    <h3>Venta</h3>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AgregarDetalle" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PedidoId" />
                <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="ProductoId" class="control-label"></label>
                    <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div> 
                 <div class="form-group col-md-2 text-right">
                    <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i></button>
                </div>             
                </div>
            </form>
        </div>
    </div>
</div>

