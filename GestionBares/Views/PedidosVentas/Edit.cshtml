@model GestionBares.Models.PedidoAlmacenVenta

@{
    ViewData["Title"] = "Pedido";
}


<div class="container-fluid">
    <h3>Pedido a Almacen</h3>
    <hr />
    <div class="row">
        <div class="col-md-12">
            @Html.Partial("_DetalleForm", new DetallePedidoAlmacen{PedidoId = Model.Id})
        </div>
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var detalle in Model.Detalles){
                        <tr>
                            <td>@detalle.Producto.Nombre</td>
                            <td>@detalle.Cantidad</td>
                            <td>
                                <a asp-action="EliminarDetalle" asp-route-id="@detalle.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12 text-right">
            <a asp-action="Index" class="btn btn-default">Atrás</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
