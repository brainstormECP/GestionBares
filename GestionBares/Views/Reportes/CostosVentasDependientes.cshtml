@model GestionBares.ViewModels.ParametrosVM

@{
    ViewData["Title"] = "Index";
}
@section styles{
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/buttons.dataTables.min.css" rel="stylesheet" />
}

<div class="container-fluid">
    <h3>Costos y ventas en periodo seleccion de dependiente</h3>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CostosVentasDependientes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-4">
                    <label asp-for="FechaInicio" class="control-label"></label>
                    <input type="date" asp-for="FechaInicio" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="FechaFin" class="control-label"></label>
                    <input type="date" asp-for="FechaFin" class="form-control" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Dependientes" class="control-label"></label>
                    <select name="dependiente" asp-for="Dependientes" class="form-control chosen" asp-items="ViewBag.Dependientes"></select>
                </div>                
                <div class="form-group col-md-12 text-right">
                    <input type="submit" value="Mostrar" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <canvas id="costos"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="ventas"></canvas>
        </div>
    </div>
    
</div>
@section scripts{
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/mbs-qdtf.js"></script>
    <script>
        $(document).ready(function () {
            $('#dependiente').chosen();
        });
        var configCostos = {
			type: 'line',
			data: @Html.Raw(Json.Serialize(@ViewBag.Costos)) ,
			options: {
				responsive: true,
				title: {
					display: true,
					text: 'Grafica de Costos'
				},
				tooltips: {
					mode: 'index',
					intersect: false,
				},
				hover: {
					mode: 'nearest',
					intersect: true
				},
				scales: {
					xAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Fecha'
						}
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Importe'
						}
					}]
				}
			}
		};

        var configVentas = {
			type: 'line',
			data: @Html.Raw(Json.Serialize(@ViewBag.Ventas)),
			options: {
				responsive: true,
				title: {
					display: true,
					text: 'Graficas de Ventas'
				},
				tooltips: {
					mode: 'index',
					intersect: false,
				},
				hover: {
					mode: 'nearest',
					intersect: true
				},
				scales: {
					xAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Fecha'
						}
					}],
					yAxes: [{
						display: true,
						scaleLabel: {
							display: true,
							labelString: 'Importe'
						}
					}]
				}
			}
		};

		window.onload = function() {
			var ctx = document.getElementById('costos').getContext('2d');
			window.myLine = new Chart(ctx, configCostos);
            var ctx2 = document.getElementById('ventas').getContext('2d');
			window.myLine2 = new Chart(ctx2, configVentas);
		};
    </script>
}