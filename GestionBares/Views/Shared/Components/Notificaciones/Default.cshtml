@model IEnumerable<GestionBares.ViewModels.NotificacionVM>
<li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-warning">@Model.Count()</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">Usted tiene @Model.Count() notificaciones</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        @foreach (var item in Model)
                                        {
                                            <li>
                                                <a href="@item.Url">
                                                    <i class="fa fa-exchange text-aqua"></i> @item.Descripcion
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </li>