                                </a>
                                <ul class="dropdown-menu">
                                    <!-- User image -->
                                    <li class="user-header">
                                        <img src="~/tema/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">

                                        <p>
                                            @User.Identity.Name - Trabajador
