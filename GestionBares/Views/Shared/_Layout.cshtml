    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/tema/dist/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/tema/dist/js/demo.js"></script>
