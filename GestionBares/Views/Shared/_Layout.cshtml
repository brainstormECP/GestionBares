                            <span>Clasificadores</span>
                            <span class="pull-right-container">
                                <span class="label label-warning pull-right "><i class="fa fa-chevron-down"></i></span>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Bares" asp-action="Index"><i class="fa fa-chevron-right"></i> Bares</a></li>
                            <li><a asp-controller="Dependientes" asp-action="Index"><i class="fa fa-chevron-right"></i> Dependientes</a></li>
                            <li><a asp-controller="UnidadesDeMedidas" asp-action="Index"><i class="fa fa-chevron-right"></i> Unidades de Medidas</a></li>
                            <li><a asp-controller="FamiliasDeProductos" asp-action="Index"><i class="fa fa-chevron-right"></i> Familias de Productos</a></li>
                            <li><a asp-controller="Productos" asp-action="Index"><i class="fa fa-chevron-right"></i> Productos</a></li>
                        </ul>
                    </li>



                    @*<li class="header">LABELS</li>
                        <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>Important</span></a></li>
                        <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>Warning</span></a></li>
                        <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>Information</span></a></li>*@
