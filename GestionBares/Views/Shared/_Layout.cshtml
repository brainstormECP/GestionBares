<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>GestionBares | Dashboard</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/tema/bootstrap/css/bootstrap.min.css">
    <link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/fonts/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/tema/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/tema/dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/tema/plugins/iCheck/flat/blue.css">
    <!-- Morris chart -->
    <link rel="stylesheet" href="~/tema/plugins/morris/morris.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/tema/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="~/tema/plugins/datepicker/datepicker3.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/tema/plugins/daterangepicker/daterangepicker.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="~/tema/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    <link rel="stylesheet" href="~/css/hint.css">
    <link rel="stylesheet" href="~/css/toastr.min.css">
    <link rel="stylesheet" href="~/lib/chart.js/Chart.min.css">
    <link rel="stylesheet" href="~/css/chosen.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="index2.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>P</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Patriarca</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <!-- Notifications: style can be found in dropdown.less -->
                        @await Component.InvokeAsync("Notificaciones")
                        <!-- Tasks: style can be found in dropdown.less -->
                        <!-- User Account: style can be found in dropdown.less -->
                        @await Html.PartialAsync("_LoginPartial")

                        <!-- Control Sidebar Toggle Button -->
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="~/tema/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>@User.Identity.Name</p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>
                }
                <ul class="sidebar-menu">
                    @if (User.IsInRole(DefinicionRoles.Administrador))
                    {
                        @Html.Partial("menus/_AdminMenu")
                    }
                    @if (User.IsInRole(DefinicionRoles.Dependiente))
                    {
                        @Html.Partial("menus/_DependienteMenu")
                    }
                    @if (User.IsInRole(DefinicionRoles.Auditor))
                    {
                        @Html.Partial("menus/_AuditorMenu")
                    }
                    @if (User.IsInRole(DefinicionRoles.AmasB))
                    {
                        @Html.Partial("menus/_ABMenu")
                    }
                    @if (User.IsInRole(DefinicionRoles.Economia))
                    {
                        @Html.Partial("menus/_EconomiaMenu")
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <div class="text-center">
                <strong class="">Copyright &copy; 2019 - UMCC "Camilo Cienfuegos".</strong>
            </div>
        </footer>
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- jQuery 2.2.3 -->
    <script src="~/tema/plugins/jQuery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    @*<script>
            $.widget.bridge('uibutton', $.ui.button);
        </script>*@
    <!-- Bootstrap 3.3.6 -->
    <script src="~/tema/bootstrap/js/bootstrap.min.js"></script>
    <!-- Morris.js charts -->
    <script src="~/tema/plugins/morris/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/tema/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/tema/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/tema/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/tema/plugins/knob/jquery.knob.js"></script>
    <!-- datepicker -->
    <script src="~/tema/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/tema/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/tema/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/tema/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/tema/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->

    <script src="~/js/toastr.min.js"></script>
    <script src="~/js/bootstrap-confirmation.min.js"></script>
    <script src="~/lib/chart.js/Chart.min.js"></script>
    <script src="~/js/chosen.jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $('[data-toggle=confirmation]').confirmation({
                rootSelector: '[data-toggle=confirmation]',
                //other opstions
            });
            $('.chosen').chosen();
        });
    </script>
    @RenderSection("Scripts", required: false)
    <!-- END JAVASCRIPTS -->
    @if (TempData["notice"] != null || TempData["error"] != null || TempData["exito"] != null)
    {
        <script>
        @if (TempData["notice"] != null) {
            @:var messageInfo = "@TempData["notice"]";
        }
        @if (TempData["error"] != null) {
            @:var messageError = "@TempData["error"]";
        }
        @if (TempData["exito"] != null) {
            @:var messageSuccess = "@TempData["exito"]";
        }
                var showMessage = function () {
                    toastr.options = { "positionClass": "toast-bottom-right" };
                    if (typeof messageError !== 'undefined')
                        window.setTimeout(function () { toastr.error(messageError); }, 1000);
                    if (typeof messageInfo !== 'undefined')
                        window.setTimeout(function () { toastr.info(messageInfo); }, 1000);

                    if (typeof messageSuccess !== 'undefined')
                        window.setTimeout(function () {
                            toastr.success(messageSuccess);
                            toastr.showDuration = 500;
                        }, 1000);
                    //window.hideDuration(function () { toastr.success(messageSuccess) }, 3000);
                }();
        </script>
    }
</body>
</html>
