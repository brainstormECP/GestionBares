@inject UserManager<Usuario> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
        <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="~/tema/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                    <span class="hidden-xs">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- User image -->
                                    <li class="user-header">
                                        <img src="~/tema/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">

                                        <p>
                                            @User.Identity.Name - Trabajador
                                        </p>
                                    </li>
                                    <!-- Menu Body -->
                                    <!-- Menu Footer-->
