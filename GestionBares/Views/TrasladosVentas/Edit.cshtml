@model GestionBares.Models.TrasladoVenta

@{
    ViewData["Title"] = "Editar";
}


<div class="container-fluid">
    <h3>Editar Traslado de Ventas</h3>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TurnoId" />
                <input type="hidden" asp-for="UsuarioId" />
                <input type="hidden" asp-for="Fecha" />
                <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="DestinoId" class="control-label"></label>
                    <select asp-for="DestinoId" class="form-control chosen" asp-items="ViewBag.DestinoId"></select>
                </div>
     
                <div class="form-group col-md-4">
                    <label asp-for="ProductoId" class="control-label"></label>
                    <select asp-for="ProductoId" class="form-control chosen" asp-items="ViewBag.ProductoId"></select>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>                
                </div>
                <div class="form-group col-md-12 text-right">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-default">Atrás</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
