@model GestionBares.Models.Turno

@{
    ViewData["Title"] = "Nuevo";
}

<div class="container-fluid">
    <h3>Crear Turno</h3>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Nuevo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DependienteId"/>
                <div class="form-group col-md-4">
                    <label asp-for="BarId" class="control-label"></label>
                    <select asp-for="BarId" class="form-control" asp-items="ViewBag.BarId"></select>
                </div>
                <div class="form-group col-md-12 text-right">
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
