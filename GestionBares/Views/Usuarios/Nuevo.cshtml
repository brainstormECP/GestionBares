@model GestionBares.ViewModels.NuevoUsuarioVM

@{
    ViewData["Title"] = "Nuevo Usuario";
}


<div class="container-fluid">
    <h3>Nuevo Usuario</h3>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Nuevo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-12">
                    <label asp-for="Nombre">Usuario</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ConfirmPassword">Confirmar contraseña</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group hidden">
                    <label asp-for="Activo">Activo</label>
                    <input asp-for="Activo" class="" checked="" type="checkbox" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="RolesIds" class="control-label">Roles</label>
                    <select asp-for="RolesIds" class="form-control chosen" multiple="" asp-items="ViewBag.RolesIds"></select>
                </div>

                <div class="form-group col-md-12 text-right">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-default">Atrás</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
