@model GestionBares.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetear contraseña";    
}
<div class="container-fluid">
<h4>Resetear contraseña del usuario: @ViewBag.Usuario</h4>

<div class="row">
    <div class="col-md-6">
        <form action="/admin/usuarios/PasswordReset" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <a asp-action="Index" class="btn btn-default">Listado</a>
            <input type="submit" class="btn btn-success" value="Cambiar" />
        </form>
    </div>
</div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
